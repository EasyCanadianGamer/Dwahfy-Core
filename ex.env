PORT=3000
NODE_ENV=development

# DATABASE_URL format:
# postgres://<user>:<password>@<host>:<port>/<database>
# Example (local/self-hosted):
# DATABASE_URL=postgres://postgres:postgres@localhost:5434/myapp_dev
# Example (Supabase):
# DATABASE_URL=postgres://<user>:<password>@<host>:<port>/<database>?sslmode=require
# If you see "self-signed certificate" errors, add:
# &sslrejectunauthorized=false
# Or set PGSSLREJECTUNAUTHORIZED=false
DATABASE_URL=postgres://postgres:postgres@localhost:5434/myapp_dev

# Auth
JWT_SECRET=change-me
OTP_SECRET=change-me

# SMTP (use in production; optional in development)
# SMTP_HOST=smtp.yourprovider.com
# SMTP_PORT=587
# SMTP_USER=your-user
# SMTP_PASS=your-pass
# SMTP_FROM=no-reply@example.com
# SMTP_SECURE=false

# CORS (set to your frontend URL in production)
CORS_ORIGIN=http://localhost:3000
