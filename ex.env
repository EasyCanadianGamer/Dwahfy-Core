PORT=3000

# Option A: Single DATABASE_URL (works for local, self-hosted, Supabase, etc.)
DATABASE_URL=postgres://postgres:postgres@localhost:5434/myapp_dev

# Option B: Individual fields (use instead of DATABASE_URL)
# DB_HOST=localhost
# DB_PORT=5434
# DB_USER=postgres
# DB_PASS=postgres
# DB_NAME=myapp_dev

# SSL (Supabase typically requires SSL)
# DB_SSL=true
# DB_SSL_REJECT_UNAUTHORIZED=false

# Optional pool tuning
# DB_POOL_MAX=10
# DB_POOL_IDLE_MS=30000
# DB_POOL_CONN_TIMEOUT_MS=2000

# CORS (set to your frontend URL in production)
CORS_ORIGIN=http://localhost:3000
